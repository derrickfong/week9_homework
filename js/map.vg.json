{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 400,
    "title": "Rainfall in Australia since December 2008",
    "projection": {
        "type": "mercator"
    },
    "layer": [
        {
            "data": {
                "url": "js/ne_110m_admin_0_countries.json",
                "format": {
                    "type": "topojson",
                    "feature": "ne_110m_admin_0_countries"
                }
            },
            "mark": {
                "type": "geoshape",
                "fill": "lightgray",
                "stroke": "white"
            }
        },
        {
            "data": {
                "url": "data/a2.csv"
            },
            "mark": {
                "type": "circle",
                "tooltip": {
                    "content": "data"
                }
            },
            "encoding": {
                "longitude": {
                    "field": "Long",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "Lat",
                    "type": "quantitative"
                },
                "size": {
                    "field": "Rainfall",
                    "type": "quantitative",
                    "title": "Rainfall (mm)",
                    "scale": {
                        "domain": [0, 400]  
                    }
                },
                "color": {
                    "field": "Rainfall",
                    "type": "quantitative",
                    "title": "Rainfall Intensity (mm)",
                    "scale": {
                        "scheme": "blues"  
                    }
                }
            }
        }
    ]
}
